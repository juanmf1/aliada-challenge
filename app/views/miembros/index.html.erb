<p style="color: green"><%= notice %></p>

<h1 class="mx-3">Miembros</h1>

<%= link_to "<i class='bi bi-plus'></i>".html_safe + " Crear nuevo miembro", new_miembro_path, :class => "btn btn-dark float-end m-3" %>

<table class="table table-dark table-striped table-hover text-center">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Nombre</th>
      <th scope="col">Apellido</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @miembros.each do |miembro| %>
      <tr>
        <td><%= miembro.id %></td>
        <td><%= miembro.nombre %></td>
        <td><%= miembro.apellido %></td>
        <td>
          <div class="d-flex justify-content-center ">
            <%= link_to "<i class='bi bi-three-dots'></i>".html_safe, miembro_path(miembro), :class => "btn btn-outline-primary mx-1", :title => "Ver detalles" %>
            <%= link_to "<i class='bi bi-pencil'></i>".html_safe, edit_miembro_path(miembro), :class => "btn btn-outline-warning mx-1", :title => "Editar" %>
            <%= button_to "<i class='bi bi-trash'></i>".html_safe, miembro_path(miembro), method: :delete, :class => "btn btn-outline-danger mx-1", :title => "Eliminar" %>
            <% if miembro.tickets.size > 0 %>
              <%= link_to "<i class='bi bi-ticket-perforated'></i>".html_safe, tickets_miembro_path(miembro), :class => "btn btn-outline-secondary mx-1", :title => "Ver tickets" %>
            <% end %>

          </div>
          
        </td>
      </tr>
    <% end %>
  </tbody>
