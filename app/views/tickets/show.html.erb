<p style="color: green"><%= notice %></p>

  <div class="card bg-secondary m-2" style="width: 25rem; color: white" >
    <div class="card-header">
      Ticket
    </div>
    <div class="card-body d-flex flex-column">
      <div class="d-flex">
        <p><b>Nombre: </b></p>
        <p class="ms-1"><%= @ticket.handle %></p>
      </div>
      <div class="d-flex">
        <p><b>Status: </b></p>
        <p class="ms-1"><%= @ticket.status %></p>
      </div>
    </div>
    <div class="card-footer d-flex">
      <%= link_to "Editar", edit_ticket_path(@ticket), :class => "btn btn-warning me-2" %>
      <%= button_to "Eliminar", @ticket, method: :delete, :class => "btn btn-danger" %>
    </div>
  </div>

