<%= form_with(model: ticket) do |form| %>
  <% if ticket.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

      <ul>
        <% ticket.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="card bg-secondary m-2" style="width: 25rem;color:white" >
    <div class="card-header">
      Ticket
    </div>
    <div class="card-body d-flex flex-column">
        <%= form.label :nombre %>
        <%= form.text_field :nombre %>
  
      <!-- 
        <%= form.label :miembro %>
        <%= form.select :miembro, ["Miembro 1", "Miembro 2"] %> -->

        <%= form.label :status %>
        <%= form.select :status, Ticket::STATUS_ARR %>

        
    </div>
    <div class="card-footer">
      <%= form.submit "Guardar ticket", :class => "btn btn-dark" %>
    </div>
  </div>


  
<% end %>
