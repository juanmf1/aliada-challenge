<p style="color: green"><%= notice %></p>

<h1 class="mx-3" >Tickets</h1>

<%= link_to "<i class='bi bi-plus'></i>".html_safe + " Crear nuevo ticket", new_ticket_path, :class => "btn btn-dark float-end m-3" %>

<table class="table table-dark table-striped table-hover text-center">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Nombre</th>
      <th scope="col">Miembro</th>
      <th scope="col">Status</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.id %></td>
        <td><%= ticket.handle %></td>
        <td><%= ticket.miembro.handle %></td>
        <td><%= ticket.status %></td>
        <td >
          <div class="d-flex justify-content-center">
            <%= link_to "<i class='bi bi-three-dots'></i>".html_safe, ticket_path(ticket), :class => "btn btn-outline-primary mx-1" %>
            <%= link_to "<i class='bi bi-pencil'></i>".html_safe, edit_ticket_path(ticket), :class => "btn btn-outline-warning mx-1" %>
            <%= button_to "<i class='bi bi-trash'></i>".html_safe, ticket_path(ticket), method: :delete, :class => "btn btn-outline-danger mx-1" %>
          </div>
          
        </td>
      </tr>
    <% end %>
  </tbody>
</table>



